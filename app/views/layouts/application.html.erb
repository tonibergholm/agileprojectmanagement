<!DOCTYPE html PUBLIC "-//W3C//DTD XHTML 1.0 Strict//EN" "http://www.w3.org/TR/xhtml1/DTD/xhtml1-strict.dtd">
<html xmlns="http://www.w3.org/1999/xhtml">
<head>
 	<meta http-equiv="content-type" content="text/html;charset=UTF-8" />
	<title><%= controller.controller_name %>: <%= controller.action_name %></title>
	<%= stylesheet_link_tag 'scaffold' %>
	<%= stylesheet_link_tag 'visual' %>
	<%= stylesheet_link_tag 'redbox' %>
	<%= javascript_include_tag :defaults %>
	<%= javascript_include_tag 'redbox' %>
	<meta name="keywords" content="agile,scrum,project management,ruby,rails" />
	<meta name="description" content="Project management in Agile world" />
</head>
<body>
	<!-- start header -->
	<div id="header">
		<div id="logo">
			<h1><a href="/">agile project management</a></h1>
			<p><%= pluralize User.logged_in.count, "user" %> currently logged in</p>
		</div>
		<div id="notice">
			<p style="color: grey"><%= flash[:notice] %></p>
		</div>
		<div id="menu">
			<ul>
				<% if !current_user %>
				<li><a href="#">Home</a></li>
				<% else %>
				<li><a href="#">Dashboard</a></li>
				<li><a href="#">My Projects</a></li>
				<% end %>
				<li><a href="#">Contact </a></li>
			</ul>
		</div>
	</div>
	<hr />
	<!-- end header -->
<!-- start page -->
<div id="wrapper">
	<div id="page">
		<!-- start content -->
		<div id="content">
			<%= yield  %>
		</div>
		<!-- end content -->
		<!-- start sidebar -->
		<div id="sidebar">
		<%= render_sidebars %>
		</div>
		<!-- end sidebar -->
		<br style="clear: both;" />
	</div>
</div>
<!-- end page -->
<!-- start footer -->
<div id="footer">
<p id="footer_text">
